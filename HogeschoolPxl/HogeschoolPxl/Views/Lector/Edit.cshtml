@model LectorEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h4 class="cat-heading">Edit Lector</h4>

<div class="form-container">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="LectorId" />
        <div class="form-group">
            <label asp-for="Id">Edit Lector</label>
            <select asp-for="Id" class="form-control">
                <option value="">Please Select</option>
                @foreach (Gebruiker gebruiker in Model.Gebruikers)
                {
                    <option value="@gebruiker.Id">@gebruiker.Naam @gebruiker.VoorNaam</option>
                }
            </select>
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group submit-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
    <div class="form-group">
        <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model Student
@{
    var photoPath = "/images/" + (Model.Gebruiker.ImageUrl ?? "nogebruiker.png");
}
<div class="card" style="width: 18rem;">
    <img src="@photoPath" class="card-img-top" alt="@Model.Gebruiker.Naam">
    <div class="card-body">
        <h3>@Model.Gebruiker.VoorNaam</h3>
        <h5 class="card-title">Id : @Model.StudentId</h5>
        <div class="links">
            <a asp-action="Edit" asp-route-id="@Model.StudentId" class="btn btn-primary">Edit</a>
            <a asp-action="Details" asp-route-id="@Model.StudentId" class="btn btn-info">Details</a>
            <a asp-action="Delete" asp-route-id="@Model.StudentId" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>
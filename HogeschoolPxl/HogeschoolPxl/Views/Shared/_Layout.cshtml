<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HogeschoolPxl</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Main.css" />
    
    @if (IsSectionDefined("GebruikerStyle"))
    {
        @RenderSection("GebruikerStyle", required: true);
    }
    @if (IsSectionDefined("LectorenStyle"))
    {
        @RenderSection("LectorenStyle", required: true);
    }
</head>
<body>
    <header class="bg-light">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">HogeschoolPxl</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" data-link="Home Page" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" data-link="Gebruikers" asp-controller="Gebruiker" asp-action="Index">Gebruikers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" data-link="Vakken" asp-controller="Vak" asp-action="Index">Vak</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" data-link="Lectoren" asp-controller="Lector" asp-action="Index">Lector</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" data-link="VakLectoren" asp-controller="VakLector" asp-action="Index">VakLector</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" data-link="Studenten" asp-controller="Student" asp-action="Index">Studenten</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" data-link="Handboeken" asp-controller="Handboek" asp-action="Index">Handboek</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" data-link="Inschrijvingen" asp-controller="Inschrijving" asp-action="Index">Inschrijving</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" data-link="AcademieJaren" asp-controller="AcademieJaar" asp-action="Index">AcademieJaar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" data-link="Portfolio" asp-page="/Portfolio">Portfolio</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - HogeschoolPxl - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Main.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    @if (IsSectionDefined("ShowPath"))
    {
        @RenderSection("ShowPath", required: true);
    }
</body>
</html>

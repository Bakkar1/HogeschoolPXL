@model HogeschoolPxl.Models.Student

@{
    ViewData["Title"] = "Edit";
}

<h4 class="cat-heading">Edit Student</h4>

<div class="form-container">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="StudentId" />
        <div class="form-group">
            <label asp-for="GebruikerId" class="control-label"></label>
            <input asp-for="GebruikerId" class="form-control" />
            <span asp-validation-for="GebruikerId" class="text-danger"></span>
        </div>
        <div class="form-group submit-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
    <div class="form-group">
        <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
